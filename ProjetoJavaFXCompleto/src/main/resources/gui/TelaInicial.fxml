<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.ControladorTelaInicial"
      spacing="10" alignment="CENTER">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Gerenciador de PDF" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Button text="1 - Adicionar entrada" onAction="#handleAdicionarEntrada" />
        <Button text="2 - Listar entradas" onAction="#handleListarEntradas" />
        <Button text="3 - Buscar por título" onAction="#handleBuscarPorTitulo" />
        <Button text="4 - Buscar por autor" onAction="#handleBuscarPorAutor" />
        <Button text="5 - Salvar biblioteca" onAction="#handleSalvar" />
        <Button text="6 - Alternar biblioteca" onAction="#handleAlternarBiblioteca" />
        <Button text="7 - Criar coleção" onAction="#handleCriarColecao" />
        <Button text="8 - Adicionar à coleção" onAction="#handleAdicionarEntradaColecao" />
        <Button text="9 - Remover da coleção" onAction="#handleRemoverEntradaColecao" />
        <Button text="10 - Exportar .bib" onAction="#handleExportarBib" />
        <Button text="11 - Exportar .zip" onAction="#handleExportarZip" />
        <Button text="12 - Listar coleções" onAction="#handleListarColecoes" />

        <Button text="Sair" onAction="#handleSair" />
    </children>
</VBox>
